{
  "name": "surfview",
  "version": "2.1.0",
  "description": "A modular Three.js-based brain surface visualization library",
  "type": "module",
  "main": "./dist/surfview.umd.js",
  "module": "./dist/surfview.es.js",
  "types": "./dist/types/index.d.ts",
  "sideEffects": false,
  "exports": {
    ".": {
      "import": "./dist/surfview.es.js",
      "require": "./dist/surfview.umd.js",
      "types": "./dist/types/index.d.ts"
    },
    "./react": {
      "import": "./src/index.react.js",
      "require": "./src/index.react.js",
      "types": "./dist/types/index.d.ts"
    }
  },
  "typesVersions": {
    "*": {
      "react": [
        "./dist/types/index.d.ts"
      ],
      "react/*": [
        "./dist/types/*"
      ]
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "dev": "vite",
    "demo": "vite --config vite.demo.config.ts --open",
    "build": "npm run clean && vite build && npm run build:types",
    "demo:build": "vite build --config vite.demo.config.ts",
    "build:types": "tsc --emitDeclarationOnly",
    "clean": "rm -rf dist",
    "preview": "vite preview",
    "preview:ci": "vite preview --host 0.0.0.0 --port 4173",
    "build:legacy": "gulp",
    "type-check": "tsc --noEmit",
    "test": "npm run build && node tests/test-parser.js && node tests/test-nonindexed-geometry.js",
    "playwright:test": "playwright test",
    "dev:ci": "vite dev --host 0.0.0.0 --port 4173",
    "test:playwright": "start-server-and-test dev:ci http://localhost:4173/tests/test-gifti.html playwright:test",
    "size": "size-limit",
    "test:browser": "vite preview --open tests/test-gifti.html",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "neuroscience",
    "brain",
    "visualization",
    "three.js",
    "neuroimaging",
    "fmri"
  ],
  "author": "Bradley Buchsbaum",
  "repository": {
    "type": "git",
    "url": "https://github.com/bbuchsbaum/surfviewjs"
  },
  "bugs": {
    "url": "https://github.com/bbuchsbaum/surfviewjs/issues"
  },
  "homepage": "https://github.com/bbuchsbaum/surfviewjs#readme",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@rollup/plugin-commonjs": "^22.0.2",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@size-limit/file": "^11.2.0",
    "@types/colormap": "^2.3.4",
    "@types/node": "^20.19.9",
    "@types/react": "^18.3.23",
    "@types/react-dom": "^18.3.7",
    "@types/three": "^0.181.0",
    "gulp": "^4.0.2",
    "jsdom": "^26.1.0",
    "node-fetch": "^3.3.2",
    "rollup": "^2.79.1",
    "rollup-plugin-terser": "^7.0.2",
    "size-limit": "^11.2.0",
    "start-server-and-test": "^2.1.3",
    "typescript": "^5.9.2",
    "vite": "^5.0.0",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "colormap": "^2.3.2",
    "fflate": "^0.6.10"
  },
  "peerDependencies": {
    "@tweakpane/plugin-essentials": "^0.2.1",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "three": "^0.181.2",
    "tweakpane": "^4.0.4"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "react-dom": {
      "optional": true
    },
    "tweakpane": {
      "optional": true
    },
    "@tweakpane/plugin-essentials": {
      "optional": true
    }
  },
  "size-limit": [
    {
      "name": "ESM bundle",
      "path": "dist/surfview.es.js",
      "limit": "320 KB"
    }
  ]
}
